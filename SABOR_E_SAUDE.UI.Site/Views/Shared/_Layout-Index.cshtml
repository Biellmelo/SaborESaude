<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sabor & Saude</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/EstiloSaborESaude.css")
    <link rel="stylesheet"  type="text/xcss" href="~/Content/EstiloSaborESaude.css"/>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="Background-Image-Page">
    <div>
        
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sabor & Saude</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
